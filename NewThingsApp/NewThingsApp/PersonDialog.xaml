<Window x:Class="NewThingsApp.PersonDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NewThings"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800"
        Title="Add Person..."
        SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="12" Width="200">

        <TextBlock Text="First Name:" Margin="0,0,0,3" />
        <TextBox x:Name="firstTextBox" Margin="0,0,0,6" Padding="3" />

        <TextBlock Text="Last Name:" Margin="0,0,0,3" />
        <TextBox x:Name="lastTextBox" Margin="0,0,0,12" Padding="3" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Add" Click="OnAddClicked" Padding="3" />
            <Button Content="Cancel" Click="OnCancelClicked" Padding="3" Margin="6,0,0,0" />
        </StackPanel>

    </StackPanel>
</Window>
